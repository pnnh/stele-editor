{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    //"isolatedModules": true,
//    "noEmit": false,
    "declaration": true,
    //"declarationDir": "types",
    "emitDeclarationOnly": false,
    "plugins": [],
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
